<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:elevation="10dp"
    android:radius="16dp"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Día de la semana -->
        <TextView
            android:id="@+id/tvDayClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lunes"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <!-- Grupo muscular o descripción de la rutina para ese día -->
        <TextView
            android:id="@+id/tvRutineDayClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Glúteos"
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginTop="4dp" />

        <!-- Detalle de la rutina: número de ejercicios y series -->
        <TextView
            android:id="@+id/tvDetailsRutineClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 ejercicios - 19 series"
            android:textSize="14sp"
            android:textColor="#777777"
            android:layout_marginTop="6dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
